# CRM Escort AI - Environment Variables
# Copy this file to .env and fill in your actual values

# Database
POSTGRES_PASSWORD=your_secure_db_password_here
DB_URL=postgresql://crm_user:your_secure_db_password_here@localhost:5432/crm_escort

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_ALGO=HS256

# AI / LLM
OPENAI_API_KEY=sk-your-openai-api-key-here

# SMS (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# Optional: Your Twilio phone number for sending SMS
TWILIO_FROM_NUMBER=+1234567890

# Google Calendar (OAuth)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Microsoft Outlook (OAuth)
OUTLOOK_CLIENT_ID=your_outlook_oauth_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_oauth_client_secret
OUTLOOK_REDIRECT_URI=http://localhost:8000/auth/outlook/callback

# RM Chat (if official API available)
RM_CHAT_API_KEY=your_rm_chat_api_key_if_available

# App Config
ENV=development
DEBUG=true
LOG_LEVEL=info

# CORS (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Geocoding (optional, for location resolution)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
